<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardSwipeSpecesActivity"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/esaal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/title"
            android:textStyle="bold"
            />


        <TextView
            android:background="@android:color/white"
            android:layout_below="@id/esaal"
            android:id="@+id/esaal_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9dp"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:text="@string/ask_el_basha"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/favoratelist"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_list"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar"
        android:id="@+id/phone_layout"
        android:layout_above="@+id/buttons_layout"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/big_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="20dp"
                android:id="@+id/linear_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/phone_photo"
                    android:background="@drawable/phone_photo"
                    android:layout_width="100dp"
                    android:layout_height="150dp" />
                <TextView
                    android:id="@+id/phone_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Redmi Note 7"
                    android:textColor="@android:color/black"
                    android:textSize="14dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
<!--********************** prices Layout ********************** -->
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:id="@+id/storage_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3GB &amp; 32GB"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3000 EGP"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3GB &amp; 32GB"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3777 EGP"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3GB &amp; 32GB"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4222 EGP"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15dp"/>
                </LinearLayout>

            </LinearLayout>
<!--********************** prices Layout ********************** -->

            <TextView
                android:id="@+id/colors_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colors"
                android:textSize="20dp"
                android:layout_below="@+id/storage_layout"
                android:textColor="#183a9d"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/colors_text"
                android:id="@+id/color_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    app:backgroundTint="#F08DDF"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <android.support.design.widget.FloatingActionButton
                    app:backgroundTint="@android:color/black"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <android.support.design.widget.FloatingActionButton
                    app:backgroundTint="#4f83d9"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>

            </LinearLayout>
                <TextView
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bgd_round"
                    android:text="shop now"
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/color_layout"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:textStyle="bold"
            android:id="@+id/key_specs"
            android:layout_below="@+id/big_layout"
            android:background="#d6d6d6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kEY SPECS"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:padding="5dp"
            android:gravity="center"/>

        <ScrollView
            android:layout_below="@+id/key_specs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DISPLAY"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#34000000"/>


                <View
                    android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#34000000"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PLATFORM"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#34000000"/>


                <View
                    android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#34000000"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAMERA"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#34000000"/>


                <View
                    android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#34000000"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BATTERY"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#34000000"/>


                <View
                    android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#34000000"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTHER FEATURE"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#34000000"/>


                <View
                    android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#34000000"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REVIEW"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimary"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#34000000" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttons_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C40606">

        <LinearLayout

            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            >


            <ImageView
                android:id="@+id/close"
                android:layout_weight="1"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_clear"
                android:padding="12dp"
                android:background="@drawable/circle"
                />


            <ImageView
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star"
                android:padding="11dp"
                android:background="@drawable/circle"
                />

            <ImageView
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_like"
                android:padding="11dp"
                android:background="@drawable/circle"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>