<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
               android:id="@+id/mobileimage"
               android:layout_marginTop="@dimen/CardTopmerginImage"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:layout_width="match_parent"
               android:layout_height="@dimen/HeightCardImage"
               />

        <com.victor.loading.rotate.RotateLoading
            android:id="@+id/rotateloading"
            android:layout_width="80dp"
            android:layout_height="80dp"
            card_view:loading_width="5dp"
            card_view:loading_color="@color/colorPrimary"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/mobilename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobileimage"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/CardTopmergin"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:text="Redmi Note 7"
            android:textSize="@dimen/HeightCardText"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>


