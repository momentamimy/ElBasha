<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuperCharFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سوبر هيرو"
            android:textSize="35dp"
            android:textColor="@android:color/white"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/kufam_bold"
            />

        <ImageView
            android:id="@+id/char_superhero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/superhero"
            />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:text="\u25CF الأداء المتوسط فى كل مهام الموبايل "
                android:shadowColor="@android:color/black"
                android:fontFamily="@font/bahij_the_sans_arabic_bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:text="\u25CF الموبايل الأقرب للموبايل المثالى "
                android:shadowColor="@android:color/black"
                android:fontFamily="@font/bahij_the_sans_arabic_bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:text="\u25CF جاهز لتلبية اغراضك اليومية بشكل سريع وفعال "
                android:shadowColor="@android:color/black"
                android:fontFamily="@font/bahij_the_sans_arabic_bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:text="\u25CF قوة المعالج - نقاء الكاميرا - قوة مواد التصنيع "
                android:shadowColor="@android:color/black"
                android:fontFamily="@font/bahij_the_sans_arabic_bold"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>