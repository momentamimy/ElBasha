<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgd_svg"
    tools:context=".RegisterActivity"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:transitionName="Transition_Animation">
        <TextView
            android:id="@+id/logo1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/MoblieCardView"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#88FFFFFF">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/MOB_Icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_smartphone"
                android:layout_centerVertical="true"/>
            <View android:id="@+id/separator"
                android:layout_toEndOf="@+id/MOB_Icon"
                android:background="#000000"
                android:layout_width = "1dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/MOB_Icon" />
            <EditText
                android:textColorHint="#000"
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/separator"
                android:background="@android:color/transparent"
                android:layout_toRightOf="@+id/separator"
                android:hint="MOBLIE"
                android:paddingLeft="20dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/MoblieCardView"
        android:id="@+id/PasswordCardView"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#88FFFFFF">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/LOCK_Icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_lock"
                android:layout_centerVertical="true"/>
            <View android:id="@+id/separator2"
                android:layout_toEndOf="@+id/LOCK_Icon"
                android:background="#000000"
                android:layout_width = "1dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/LOCK_Icon" />
            <EditText
                android:textColorHint="#000"
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/separator2"
                android:background="@android:color/transparent"
                android:layout_toRightOf="@+id/separator2"
                android:hint="PASSWORD"
                android:paddingLeft="20dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/PasswordCardView"
        android:id="@+id/ConfirmPasswordCardView"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#88FFFFFF">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/LOCK_Confirm_Icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_lock"
                android:layout_centerVertical="true"/>
            <View android:id="@+id/separator3"
                android:layout_toEndOf="@+id/LOCK_Confirm_Icon"
                android:background="#000000"
                android:layout_width = "1dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/LOCK_Confirm_Icon" />
            <EditText
                android:textColorHint="#000"
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toEndOf="@+id/separator3"
                android:background="@android:color/transparent"
                android:layout_toRightOf="@+id/separator3"
                android:hint="CONFIRM PASSWORD"
                android:paddingLeft="20dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enter"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_below="@+id/ConfirmPasswordCardView"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:id="@+id/ENTER"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تسجيل"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:fontFamily="@font/abdo_master_semibold"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>