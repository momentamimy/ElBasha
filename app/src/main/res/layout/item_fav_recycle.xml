<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/parent"
    android:layout_marginTop="15dp"
    android:layout_marginStart="5dp"
    android:layout_marginLeft="5dp"
    card_view:cardBackgroundColor="#cbc0cc"
    card_view:cardCornerRadius="6dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mobileimage"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:src="@drawable/dummy3"
            />

        <com.victor.loading.rotate.RotateLoading
            android:id="@+id/rotateloading2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            card_view:loading_width="5dp"
            card_view:loading_color="@color/colorPrimary"
            android:layout_centerInParent="true"/>


        <TextView
            android:id="@+id/nameofmobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobileimage"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:text="Redmi Note 7"
            android:textSize="22sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>


