<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgd_svg"
    tools:context=".Wa7shProccesseorTutorial">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/esaal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="@string/title"
        android:fontFamily="@font/aref_regular"/>
    <android.support.v7.widget.CardView
        android:layout_below="@+id/esaal"
        android:id="@+id/wa7shelprocessor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:transitionName="backgroundTransition"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_bgd_1">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:src="@drawable/text_processor"/>

            <ImageView
                android:layout_margin="20dp"
                android:layout_centerVertical="true"
                android:layout_width="100dp"
                android:layout_height="280dp"
                android:background="@drawable/char_processor"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>