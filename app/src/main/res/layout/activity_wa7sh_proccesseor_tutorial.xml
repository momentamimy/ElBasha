<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgd_svg"
    tools:context=".Wa7shProccesseorTutorial"
    android:layoutDirection="rtl">
    <RelativeLayout
        android:id="@+id/esaallayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:layout_margin="30dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/esaal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/title"
            android:fontFamily="@font/aref_regular"/>
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_below="@+id/esaallayout"
        android:id="@+id/wa7shelprocessor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:transitionName="backgroundTransition"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_bgd_1">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/text_processor" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="120dp"
                android:layout_height="280dp"
                android:background="@drawable/char_processor"
                android:layout_alignParentRight="true"
                />

           <LinearLayout
               android:layout_marginStart="20dp"
               android:layout_centerVertical="true"
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="\u25CF معالج فورى ومعالج رسوم فورى"
                   android:textColor="#fff"
                   android:textSize="15dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="\u25CF معالج فورى ومعالج رسوم فورى"
                   android:textColor="#fff"
                   android:textSize="15dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="\u25CF معالج فورى ومعالج رسوم فورى"
                   android:textColor="#fff"
                   android:textSize="15dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="\u25CF معالج فورى ومعالج رسوم فورى"
                   android:textColor="#fff"
                   android:textSize="15dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="\u25CF معالج فورى ومعالج رسوم فورى"
                   android:textColor="#fff"
                   android:textSize="15dp"/>

           </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/next"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                app:cardCornerRadius="25dp"
                app:cardElevation="5dp"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:id="@+id/SKIP"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="التالى"
                        android:fontFamily="@font/abdo_master_semibold"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>